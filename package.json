{
  "name": "dental-electron",
  "version": "1.0.1",
  "description": "Dental Clinic Management - Electron Desktop App",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && vite build",
    "start": "npm run build && electron .",
    "dev:main": "tsc -p tsconfig.json --watch --preserveWatchOutput",
    "dev:renderer": "vite dev",
    "dev:electron": "wait-on http://localhost:5173 && set VITE_DEV_SERVER_URL=http://localhost:5173&& electronmon .",
    "dev": "tsc -p tsconfig.json && concurrently -k -n main,renderer,electron -c blue,green,yellow \"npm:dev:main\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "seed": "tsx prisma/seed.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "release": "npm run build && electron-builder --win --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.8.0",
    "@tanstack/react-query": "^5.74.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.7.3",
    "pdfkit": "^0.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.55.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.5.0",
    "recharts": "^2.15.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.0",
    "zustand": "^5.0.0"
  },
  "electronmon": {
    "patterns": [
      "dist/main/**/*.js"
    ]
  },
  "devDependencies": {
    "@types/pdfkit": "^0.13.8",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.4.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.7.0",
    "electronmon": "^2.0.4",
    "postcss": "^8.5.0",
    "prisma": "^6.8.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.dentalclinic.app",
    "productName": "DentalCare Pro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "prisma/**/*",
      "!node_modules/.prisma/client/libquery_engine-*",
      "node_modules/.prisma/client/libquery_engine-windows.dll.node",
      "node_modules/.prisma/client/query_engine-windows.dll.node"
    ],
    "asarUnpack": [
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma/dev.db",
        "to": "prisma/dev.db"
      },
      {
        "from": "prisma/empty.db",
        "to": "prisma/empty.db"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "kacey-manalac",
      "repo": "dental-electron",
      "releaseType": "release"
    }
  }
}
